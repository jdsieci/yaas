{lib_dirs, ["deps"]}.
{src_dirs, ["src", "src/model"]}.
{eunit_compile_opts, [{src_dirs, ["src/test"]}]}.
{plugins, [boss_db_rebar]}.
{plugin_dir, ["deps/boss_db/priv/rebar"]}.
{deps, [
    {boss_db, ".*", {git, "https://github.com/evanmiller/boss_db.git",  "HEAD"}},
    {resource_discovery, ".*", {git, "https://github.com/erlware/resource_discovery.git", "HEAD"}},
    {lager, ".*", {git, "https://github.com/basho/lager.git", {tag, "1.2.2"}}},
    {poolboy, ".", {git, "https://github.com/devinus/poolboy.git", "HEAD"}}
  ]}.
{post_hooks, [{compile, "cp ./src/sys.config ./ebin/sys.config"}]}.
{boss_db_opts, [
    {model_dir, "src/model"}
]}.